<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/selectButton"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="249dp"
        android:text="@string/select_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/categorizeButton"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp"
        android:text="Categorize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="360dp"
        android:layout_height="396dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="39dp"
        android:contentDescription="Image to be classified"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="HardcodedText,MissingConstraints,ImageContrastCheck" />

    <TextView
        android:id="@+id/superClassLabel"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="503dp"
        android:layout_marginEnd="39dp"
        android:autoSizeTextType="uniform"
        android:text="Super Class"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/superClassCat"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="553dp"
        android:layout_marginEnd="39dp"
        android:autoSizeTextType="uniform"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subClassLabel"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="603dp"
        android:layout_marginEnd="39dp"
        android:autoSizeTextType="uniform"
        android:text="Sub Class"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/subClassCat"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="653dp"
        android:layout_marginEnd="39dp"
        android:autoSizeTextType="uniform"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
